<div class = "bg-light">
 <!-- Banner Section -->
  <div class = "row">
    <div class="container col my-5 d-flex justify-content-center align-items-center flex-column text-center">

      <%if @list.photo.attached?%>
      <div> <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %> </div>
      <% else %>
      <div> <%= cl_image_tag "samples/logo", height: 300, width: 400, crop: :fill %> </div>
      <% end %>
        <h1><%= @list.name %></h1>
      </div>
    </div>

    <!-- Movie Cards Section -->
    <div class="row g-4">
      <% @list.movies.each do |movie| %>
        <div class="col-md-4">
          <div class="card h-100">
            <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.overview %></p>
              <p class="card-text"><strong>Rating:</strong> <%= movie.rating %></p>
            </div>
            <div class="card-footer">
              <%= link_to "Delete this movie", bookmark_path(movie.bookmark_ids), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this movie?"}, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Navigation Links -->
    <div class="mt-4">
      <%= link_to "Go back to lists", root_path, class: "btn btn-secondary me-2" %>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    </div>
  </div>

</div>
  <!-- Footer  -->
<div class="footer">
  <div class="footer-links">
    <a href="https://github.com/Wazaaa974"><i class="fab fa-github"></i></a>
    <a href="https://www.instagram.com/wazaaa974/"><i class="fab fa-instagram"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made by the notorious <i class="fas fa-heart"></i> Thomas ALONSO <i class="fas fa-heart"></i>
  </div>
</div>
